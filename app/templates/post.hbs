<div class="container">
  <img class="card-img-top" src={{model.image}} alt="Card image cap">
  <h1>{{model.title}}</h1>
  <p>{{model.body}}</p>

  <h4>Comments</h4>

  <ul>
    {{#each @model.comments as |comment|}}
      <li>
        {{comment.title}}<br>
        {{comment.body}}<br>
      </li>
    {{/each}}
  </ul>
</div>